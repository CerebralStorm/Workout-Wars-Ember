<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Challenge Settings</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="form-group">
        <label class= "col-sm-3 control-label">Name</label>
        <div class="col-sm-9">
          {{input value=name classNames="form-control"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <input {{action "saveCompetition"}} type="submit" class="btn btn-block btn-success" value="Save" />
        </div>
      </div>
    </div>
  </div>
</div>


