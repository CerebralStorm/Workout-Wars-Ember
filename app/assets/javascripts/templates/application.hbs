  </div>
</div>

<div class="container-fluid">
<div class="row">
  <div {{bind-attr class="showExercisePanel:col-md-9:col-md-11"}}>
    {{outlet modal}}
    {{view WorkoutWars.FlashView model=WorkoutWars.flash}}
    {{outlet}}
  </div>
  <div {{bind-attr class=":gray-background showExercisePanel:col-md-3:col-md-1"}}>
    <a href="#" {{action "toggleExercisePanel"}}>
      {{#if showExercisePanel}}
        <i class="fa fa-3x fa-minus-square"></i>
      {{else}}
        <i class="fa fa-plus-square"></i>
        <small>New Exercise</small>
      {{/if}}
    </a>
    {{outlet "sidebar"}}
  </div>
</div> 
</div><!-- /container -->

