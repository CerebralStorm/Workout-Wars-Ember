<div class="row">
  <div {{bind-attr class="inChild:col-md-8:col-md-12"}}>
    <div class="panel">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-4">
            <h1 class="panel-title">Exercise Histroy</h1>        
          </div>
          <div class="col-md-4">
            <p class="text-center"><strong>{{date startDate}} - {{date endDate}}</strong></p>       
          </div>
          <div class="col-md-4">
            <ul class="pager">
              <li><a href="#" {{action "prevWeek"}}>Previous</a></li>
              <li><a href="#" {{action "nextWeek"}}>Next</a></li>
            </ul>       
          </div>
        </div>
      </div>
      <table id="activity-calendar" class="table table-bordered table-striped">
        <tr>
          {{#each tableTitles}}
            <th>{{this}}</th>
          {{/each}}
        </tr>
        <tr>
          {{#each userExercisesByDay}}
            <td>
              {{#each userExercise in this}}
              <div class="list-group">
                <a href="#" {{action "openExercise" userExercise}} class="list-group-item" name="viewExercise">
                  <dl>
                    <dt>{{userExercise.exercise.name}}</dt>
                    <dd>{{time userExercise.createdAt}}</dd>
                    <dd>{{userExercise.value}} {{userExercise.exercise.metric.measurement}}</dd>
                  </dl>
                </a>
              </div>
              {{/each}}
            </td>
          {{/each}}
        </tr>
      </table>
    </div>
  </div>

  <div {{bind-attr class="inChild:col-md-4:"}}>
    <div class="activity-fixed-vertical">
      {{outlet}}
    </div>
  </div>
</div>
