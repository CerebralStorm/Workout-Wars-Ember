<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Profile for {{name}}</h3>
  </div>
  <div class="panel-body">
    <div class="row">      
      <div class="col-md-4">
        {{gravatarUrlLarge this}}
      </div>
      
      <div class="col-md-8">
        <table class="table table-condensed table-bordered">
        <tr><td><strong>Email:</strong> {{email}}</td></tr>
        <tr><td><strong>Nickname:</strong> {{nickname}}</td></tr>
        <tr><td><strong>Age:</strong> {{age}}</td></tr>
        <tr><td><strong>Height:</strong> {{height}}</td></tr>
        <tr><td><strong>Weight:</strong> {{weight}}</td></tr>
        <tr><td><strong>Level:</strong> {{level}}</td></tr>
        <tr><td><strong>Experience:</strong> {{experience}}</td></tr>
        <tr><td><strong>Experience to next level:</strong> {{nextLevelExperience}}</td></tr>
        </table class="table">
      </div>
    </div>
  </div>
</div>