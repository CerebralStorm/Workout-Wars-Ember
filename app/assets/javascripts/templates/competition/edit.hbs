<div class="row">
  <div class="col-md-8">
    <h4>Competition Settings</h4>
    <hr>
    <div class="row">
      <div {{bindAttr class=":form-group isValid::has-error"}}>
        <label class= "col-sm-4 control-label">Name</label>
        <div class="col-sm-8">
          {{input value=name classNames="form-control"}}
          {{errors.name}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Start Date</label>
        <div class="col-sm-8">
          {{input type="date" value=startDate classNames="form-control"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">End Date</label>
        <div class="col-sm-8">
          {{input type="date" value=endDate classNames="form-control"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Max Participants</label>
        <div class="col-sm-8">
          {{input value=maxParticipants classNames="form-control"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Exercise</label>
        <div class="col-sm-8">
          {{view Ember.Select value=selectedExercise content=selectExercises class="form-control" optionValuePath='content.id' optionLabelPath='content.name' prompt="Please select an exercise"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Public</label>
        <div class="col-sm-8">
          {{view Ember.Checkbox checkedBinding="isPublic"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <input {{action "saveCompetition"}} type="submit" class="btn btn-lg btn-block btn-success" value="Save" />
        </div>      
      </div>
    </div>
  </div>
</div>
<hr>
