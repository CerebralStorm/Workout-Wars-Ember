<div class="row">
  <div class="col-md-6">
    <h4>Competition Settings</h4>
    <hr>
    <div class="row">
      <div {{bindAttr class=":form-group isValid::has-error"}}>
        <label class= "col-sm-4 control-label">Name</label>
        <div class="col-sm-8">
          {{input value=name classNames="form-control"}}
          {{#unless isValid}}
            <p class="text-danger text-center">{{errors}}</p>
          {{/unless}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Start Date</label>
        <div class="col-sm-8">
          {{view WorkoutWars.DatePicker value=startDate}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">End Date</label>
        <div class="col-sm-8">
          {{view WorkoutWars.DatePicker valueBinding="content.endDate"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Max Participants</label>
        <div class="col-sm-8">
          {{input value=maxParticipants classNames="form-control"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Private</label>
        <div class="col-sm-8">
          {{input type="checkbox" value=isPublic}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <input {{action "saveCompetition"}} type="submit" class="btn btn-lg btn-block btn-success" value="Save" />
        </div>      
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <h4>Add Exercise</h4>
    <ul class="nav">
      {{render "exercises"}}
    </ul>
  </div>

  <div class="col-md-3">
    <h4>Remove Exercise</h4>
    <ul class="nav">
      {{#each "competitionExercises"}}
        <li><a href="#" {{action removeExercise this}}>{{exercise.name}}</a></li>
      {{/each}}
    </ul>
  </div>
</div>
<hr>
