<form {{action 'create' this.model on='submit'}}>
<div class="row">
  <div class="col-md-8">
    <h4>Competition Settings</h4>
    <hr>
    <div class="row">
      <div {{bindAttr class=":form-group errors.name:has-error:"}}>
        <label class= "col-sm-4 control-label">Name</label>
        <div class="col-sm-8">
          {{input value=this.model.name classNames="form-control" name="Name"}}
          {{#if errors.name}}<span class="help-block">{{errors.name}}</span>{{/if}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div {{bindAttr class=":form-group errors.startDate:has-error:"}}>
        <label class= "col-sm-4 control-label">Start Date</label>
        <div class="col-sm-8">
          {{view WorkoutWars.DateField valueBinding="controller.startDate" classNames="form-control" name="Start Date"}}
          {{#if errors.startDate}}<span class="help-block">{{errors.startDate}}</span>{{/if}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div {{bindAttr class=":form-group errors.endDate:has-error:"}}>
        <label class= "col-sm-4 control-label">End Date</label>
        <div class="col-sm-8">
          {{view WorkoutWars.DateField valueBinding="controller.endDate" classNames="form-control" name="End Date"}}
          {{#if errors.startDate}}<span class="help-block">{{errors.startDate}}</span>{{/if}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Max Participants</label>
        <div class="col-sm-8">
          {{input value=this.model.maxParticipants classNames="form-control" name="Max Participants"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <label class= "col-sm-4 control-label">Private</label>
        <div class="col-sm-8">
          {{view Ember.Checkbox checkedBinding="isPrivate"}}
        </div>
      </div>
    </div>

    <br />

    <div class="row">
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button class="btn btn-success btn-lg">Save</button>
        </div>      
      </div>
    </div>
  </div>
</div>
<hr>
</form>
