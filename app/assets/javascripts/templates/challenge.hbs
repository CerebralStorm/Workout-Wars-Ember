
{{outlet}}

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-danger">
      <div class="panel-heading"><h3 class="panel-title">Information</h3></div>
      <table class="table">
        <tr>
          <td><strong>Name</strong></td>
          <td>{{name}}</td>
        </tr>
        <tr>
          <td><strong>Description</strong></td>
          <td>{{description}}</td>
        </tr>
        <tr>
          <td><strong>Exercise</strong></td>
          <td>{{this.exercise.name}}</td>
        </tr>                     
      </table>        
    </div>
  </div>
    
  <div class="col-md-6">
    <div class="panel panel-danger">
      <div class="panel-heading"><h3 class="panel-title">Actions</h3></div>
      <ul class="list-group">      
        <li class="list-group-item">
          <button class="btn btn-default btn-block"{{action "createAttempt"}}>Attempt this challenge</button>
        </li>
      </ul>
    </div>
  </div> 
</div>

<div class="panel panel-danger">
  <div class="panel-heading"><h3 class="panel-title">Leaderboard</h3></div>
  <ul class="list-group">      
      <li class="list-group-item">
        <h1>Coming soon!</h1>   
      </li>
  </ul>
</div>