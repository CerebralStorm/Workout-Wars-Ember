<h1>Activities</h1>
{{controller}}
{{#linkTo "activities.create" class="btn btn-lg btn-success btn-block"}}New Activity{{/linkTo}}
<hr>
<div class="row">
  <div class="col-md-3">
    <ul class="nav nav-pills nav-stacked">
    {{#each controller}}
      <li>{{#linkTo "activity" this}}{{reps}}{{/linkTo}}</li>
    {{else}}
      <li>There are no activities.</li>
    {{/each}}
    </ul>
  </div>
  <div class="col-md-9">
    {{outlet}}
  </div>
</div>