<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Custom Exercise Details</h3>
  </div>
  <div class="panel-body">        
    <a href="#" class="btn btn-danger pull-right" {{action "delete" this}}>Delete</a>
    
    <h2>{{this.exercise.name}}</h2>
    <p><strong>Creator:</strong> {{this.user.handle}}</p>
    <p><strong>Description:</strong> {{this.exercise.description}}</p>
    <p><strong>Measurement:</strong> {{this.exercise.metric.name}}</p>
    <p><strong>Experience Multiplier:</strong> {{this.exercise.experienceMultiplier}}</p>
    <p><strong>Created At:</strong> {{date this.exercise.createdAt}}</p>
  </div>
</div>