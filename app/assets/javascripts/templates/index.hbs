      <h2>Competition Hotness</h2>
      {{#each controller}}
        {{hot-item model=this}}
      {{/each}}
    </div>

    <div class="col-md-4">
      <h2>Recent Activity</h2>
      <div class="well well-lg">
        <ul class="list-group">          
          <li class="list-group-item"><img src="/assets/guest-sml.png" class="img-rounded" /> Summer logged 20 Pushups</li>
          <li class="list-group-item"><img src="/assets/guest-sml.png" class="img-rounded" /> Scott logged 15 Pullups</li>
          <li class="list-group-item"><img src="/assets/guest-sml.png" class="img-rounded" /> Joey logged nothing</li>
        </ul>
      </div>
    </div>
  </div>
</div>
