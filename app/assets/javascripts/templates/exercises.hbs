<div class="row">
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Custom Exercises</h3>
      </div>
      <div class="list-group">
        {{#each controller}}
          {{#unless this.isDeleted}}
            {{#link-to "exercise" this id=this.id class="list-group-item"}}
              {{dateTime this.createdAt}} - {{name}}
            {{/link-to}}
          {{/unless}}
        {{else}}
          <div class="list-group-item">You haven't logged any activities yet! Go log some!</div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    {{outlet}}
  </div>
</div>