<div class="panel">
  <div class="panel-heading">
    <h3 class="panel-title">{{handle}}</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-4">
        {{gravatarUrlLarge this.model}}
      </div>
      <div class="col-sm-8">
        <p>Nickname: {{nickname}}</p>
        <p>Age: {{age}}</p>
        <p>Height: {{height}}</p>
        <p>Weight: {{weight}}</p>
        <p>Level: {{level}}</p>
        <p>Experience: {{experience}}</p>
        <p>Experience to next level: {{nextLevelExperience}}</p>
      </div>
    </div>
  </div>
</div>