<div class="user-edit">
  <div class="form-group">
    <label class= "col-sm-2 control-label">Nickname</label>
    <div class="col-sm-10">
      {{input value=nickname classNames="form-control"}}
    </div>
  </div>
  
  <div class="form-group">
    <label class= "col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input value=name classNames="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label class= "col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      {{input value=email classNames="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label class= "col-sm-2 control-label">Age</label>
    <div class="col-sm-10">
      {{input value=age classNames="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label class= "col-sm-2 control-label">Height</label>
    <div class="col-sm-10">
      {{input value=height classNames="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <label class= "col-sm-2 control-label">Weight</label>
    <div class="col-sm-10">
      {{input value=weight classNames="form-control"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input {{action "save"}} type="submit" class="btn btn-lg btn-block btn-success" value="Save" />
    </div>
  </div>
</div>