<div class="row">
  <div class="col-md-3">
    {{#link-to "competitions.create" class="btn btn-info btn-block"}}New Competition{{/link-to}}
    <hr>
    <div class="panel panel-info">
      <div class="panel-heading">
        Competition Filter
      </div>
      <ul class="list-group">
        <li class="list-group-item">
          <div class="checkbox">
            <label>
              {{input type="checkbox" checked=isUnstarted}} Not Started
            </label>
          </div>
          <div class="checkbox">
            <label>
              {{input type="checkbox" checked=isStarted}} Started
            </label>
          </div>
          <div class="checkbox">
            <label>
              {{input type="checkbox" checked=isFinished}} Finished
            </label>
          </div>
        </li>
      </ul>

      <div class="list-group">
        {{#each selectedCompetitions}}
          {{#link-to "competition" this class="list-group-item"}}
            <span {{bind-attr class="this.status"}}>{{name}}</span>
          {{/link-to}}
        {{else}}
          <a href="#" class="list-group-item">There are currently no competitions.</a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-9">
    {{outlet}}
  </div>
</div>


