<div class="row">
  <div class="col-sm-10">
    <h1>Competitions</h1>
  </div>

  <div class="col-sm-2">
    {{#link-to "competitions.create" class="btn btn-success pull-right"}}
      <i class="fa fa-plus fa-2x"></i><br>
      New Competition
    {{/link-to}}
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        Status Filter
      </div>
      <div class="panel-body">
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showUnstarted}} Unstarted
          </label>
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showStarted}} Started
          </label>
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showFinished}} Finished
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        Competitions
      </div>
      <div class="list-group">
        {{#each currentCompetitions}}
          {{#unless this.isDeleted}}
            {{#link-to "competition" this class="list-group-item"}}{{name}}{{/link-to}}
          {{/unless}}
        {{else}}
          <a href="#" class="list-group-item">There are currently no competitions of the selected type.</a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    {{outlet}}
  </div>
</div>


