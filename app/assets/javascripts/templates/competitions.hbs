{{resource-header title="Competitions" link="competitions.create"}}
<div class="row">
  <div class="col-md-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        Status Filter
      </div>
      <div class="panel-body">
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showUnstarted}} Unstarted
          </label>
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showStarted}} Started
          </label>
        </div>
        <div class="checkbox">
          <label>
            {{input type="checkbox" checked=showFinished}} Finished
          </label>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        Competitions
      </div>
      <div class="list-group">
        {{#each currentCompetitions}}
          {{#unless this.isNew}}
            {{#link-to "competition" this class="list-group-item"}}{{name}}{{/link-to}}
          {{/unless}}
        {{else}}
          <a href="#" class="list-group-item">There are currently no competitions of the selected type.</a>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col-md-6">
    {{outlet}}
  </div>
</div>


