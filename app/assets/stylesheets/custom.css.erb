/* Global Styles */
body, html, .container-fluid {
  height:100%;
}

body { 
  background-size:100%;
  background-image:url('background.png');
  background-repeat: no-repeat;
  padding-top: 93px; 
}



div.loading-gif {
  margin: 0 auto;
  background-image: url('<%= asset_path "loader.gif" %>');
  background-size: 200px 200px;
  height: 200px;
  width: 200px;
}

@font-face {
  font-family: 'Glyphicons Halflings';
  src: url('../fonts/glyphicons-halflings-regular.eot');
  src: url('<%= asset_path "glyphicons-halflings-regular.eot?#iefix" %>') format('embedded-opentype'), url('<%= asset_path "glyphicons-halflings-regular.woff" %>') format('woff'), url('<%= asset_path "glyphicons-halflings-regular.ttf" %>') format('truetype'), url('<%= asset_path "glyphicons-halflings-regular.svg#glyphicons_halflingsregular" %>') format('svg');
}

.terms {
  height: 100px;
  overflow-y: scroll;
  border: 1px solid #eee;
}

.side-arrow {
  position: absolute;  
  width: 100px; 
  height: 100px;  
  top: 10px;  
  left: 30px; 
  background-color: #00c;
}


/* Utility Styles */

.row.table-row > [class*="col-"].custom {
  background-color: #333;
  text-align: center;
}
.row.table-row {display:table;width:100%;margin:0 auto;}

.row.table-row > [class*="col-"] {
  float:none;
  float:none;
  display:table-cell;
  vertical-align:top;
}

.row.table-row > .col-sm-11 {
  width: 91.66666666666666%;
}
.row.table-row > .col-sm-10 {
  width: 83.33333333333334%;
}
.row.table-row > .col-sm-9 {
  width: 75%;
}
.row.table-row > .col-sm-8 {
  width: 66.66666666666666%;
}
.row.table-row > .col-sm-7 {
  width: 58.333333333333336%;
}
.row.table-row > .col-sm-6 {
  width: 50%;
}
.col-sm-5 {
  width: 41.66666666666667%;
}
.col-sm-4 {
  width: 33.33333333333333%;
}
.row.table-row > .col-sm-3 {
  width: 25%;
}
.row.table-row > .col-sm-2 {
  width: 16.666666666666664%;
}
.row.table-row > .col-sm-1 {
  width: 8.333333333333332%;
}

.activity-fixed-vertical {
    position: fixed;
    height: 100%;
    width: 24%;
    z-index: 999;
}

.user-fixed-vertical {
    position: fixed;
    height: 100%;
    width: 40%;
    z-index: 999;
}

#activity-calendar {
  font-size: 11px;
}

#trophy_pic.img-responsive {
  margin-left: auto;
  margin-right: auto;
}

.gray-background {
  background-color: #282828;
}

/* Footer Styles */

#main-footer {
  height: 20px;
  background: #DDDDDD;
  margin-top: 13px;
}