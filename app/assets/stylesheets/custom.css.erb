div.loading-gif {
  margin: 0 auto;
  background-image: url('<%= asset_path "loader.gif" %>');
  background-size: 200px 200px;
  height: 200px;
  width: 200px;
}

@font-face {
  font-family: 'Glyphicons Halflings';
  src: url('../fonts/glyphicons-halflings-regular.eot');
  src: url('<%= asset_path "glyphicons-halflings-regular.eot?#iefix" %>') format('embedded-opentype'), url('<%= asset_path "glyphicons-halflings-regular.woff" %>') format('woff'), url('<%= asset_path "glyphicons-halflings-regular.ttf" %>') format('truetype'), url('<%= asset_path "glyphicons-halflings-regular.svg#glyphicons_halflingsregular" %>') format('svg');
}

#main-footer {
  margin-top: 13px;
}

.terms {
  height: 100px;
  overflow-y: scroll;
  border: 1px solid #eee;
}

.activity-fixed-vertical {
    position: fixed;
    height: 100%;
    width: 24%;
    z-index: 999;
}

#activity-calendar {
  font-size: 11px;
}

.info-box {
  background-color: #fff;
  border-width: 1px;
  border-color: #ddd;
  border-radius: 4px 4px 0 0;
  box-shadow: none;
  background-color: #fafafa;
  box-shadow: inset 0 3px 6px rgba(0,0,0,.05);
  border-color: #e5e5e5 #eee #eee;
  border-style: solid;
  border-width: 1px 0;
}

.info-box h3 {
  font-size: 12px;
  font-weight: 700;
  color: #bbb;
  text-transform: uppercase;
  letter-spacing: 1px;
}

